%
% draw petal scaled by xscale and yscale, rotated by angle.
%
/petal  % xscale yscale angle petal
   {
   /petalcol [ 0.8 0 0 ] def
   /ep1 [ 0 0 ] def
   /ep2 [ 0 100 ] def
   /cp1 [ 55 65 ] def
   /cp2 [ 10 95 ] def
   /ap {aload pop} def
   gsave
   petalcol ap setrgbcolor
   0 setlinewidth
   rotate  % use angle from stack
   scale   % use xscale and yscale from stack

   ep1 ap moveto
   cp1 ap cp2 ap ep2 ap curveto
   cp2 ap exch neg exch
   cp1 ap exch neg exch
   ep1 ap curveto closepath fill

   grestore
   } def

gsave
   306 500 translate


   1 1 0 petal
   1 1 24.0 petal
   1 1 48.0 petal
   1 1 72.0 petal
   1 1 96.0 petal
   1 1 120.0 petal
   1 1 144.0 petal
   1 1 168.0 petal
   1 1 192.0 petal
   1 1 216.0 petal
   1 1 240.0 petal
   1 1 264.0 petal
   1 1 288.0 petal
   1 1 312.0 petal
   1 1 336.0 petal
grestore

showpage
